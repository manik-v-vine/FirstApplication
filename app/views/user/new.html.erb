<h1>Add new User</h1><br><br>
<% if @user.errors.any? %>
<h2><%= @user.errors.count %></h2>
<ul>
<%= @user.errors.full_messages.each do |error| %>
<li><%= error %></li>
<% end %>
</ul>
<% end %>
<%= form_for :user, :url => user_index_path do |f|%> <br><br>
 First Name: <%= f.text_field :first_name%><br><br>
  Last Name: <%= f.text_field :last_name%><br><br>
      Email: <%= f.text_field :email%><br><br>
     Active: <%= f.radio_button :active, "Yes"%>Yes<%= f.radio_button :active, "No"%>No<br><br>
      D.O.B: <%= f.text_field :date_of_birth%><br><br>
      Phone: <%= f.text_field :phone_no%><br><br>
     Mobile: <%= f.text_field :mobile_no%><br><br>
     <%= f.submit "Save"%>
 <% end %>


