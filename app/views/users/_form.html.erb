<!-- Form partial which allows to add/edit user's information and 
submits the form on the successful validation of user details-->

<h1> Register the user</h1>
<%= form_for @user, :remote => true , :id => 'form' do |f|%>
<%= f.label 'First Name:' %>
<%= f.text_field :first_name , :id =>'first_name' %><br><br>
<%= f.label 'Last Name:' %>
<%= f.text_field :last_name, :id => 'last_name' %><br><br>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.label 'Email:' %>
<%= f.text_field :email, :id => 'email' %><br><br>

&nbsp;<%= f.label 'Birth Date:' %>
<%= f.text_field :date_of_birth %><br><br>

&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.label 'Phone:' %>
<%= f.text_field :phone_no %><br><br>

&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.label 'Mobile:' %>
<%= f.text_field :mobile_no %><br><br>
<%= f.submit 'Save Info', :id => 'form_submit'%><br><br>
<%= link_to 'Close',users_path,:method => 'get', :class => 'close'%>
<% end %>
